{
    "name": "guglielmoseminara/l5-action-based-form-request",
    "description": "Action Based FormRequest for Laravel 5",
    "version": "v2.2.0",
    "keywords": [
        "form", "request", "laravel 5"
    ],
    "homepage": "https://github.com/guglielmoseminara/l5-action-based-form-request",
    "license": "MIT",
    "authors": [
        {
            "name": "Mario Patronelli",
            "email": "mario@raffles.com.ar",
            "homepage": "http://raffles.com.ar",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">= 7.2.5",
        "laravel/framework": "7.*"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit" : "^8.4",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "RafflesArgentina\\ActionBasedFormRequest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RafflesArgentina\\ActionBasedFormRequest\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
